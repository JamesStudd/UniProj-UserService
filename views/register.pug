html
    head
        title Register
    body
        form(action = '/users/register', method = 'POST')
            #form-group
                label Username
                input.form-control(name = 'username', type = 'text')
            #form-group
                label Email
                input.form-control(name = 'email', type = 'text')
            #form-group
                label Credit Card Number
                input.form-control(name = 'creditCardNumber', type = 'text')
            #form-group
                label Password
                input.form-control(name = 'password', type = 'password')
            #form-group
                label Verify Password
                input.form-control(name = 'password2', type = 'password')
            br
            input.btn.btn-primary(type = 'submit', value = 'Create account')